#!/bin/sh

# scripts/build: Build the application.s

set -ev

cd "$(dirname "$0")/.."

BASH_PROFILE='.bash_profile'
[ -f "${BASH_PROFILE}" ] && source ${BASH_PROFILE}

[ -z "$DEBUG" ] || set -x

echo "==> Buildingâ€¦"

BUILD_TYPE=$(echo ${1-release} | tr '[:upper:]' '[:lower:]')
swift build -c ${BUILD_TYPE}
